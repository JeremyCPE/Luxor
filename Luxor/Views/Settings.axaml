<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Luxor.Views.Settings"
        Title="Settings"
		Width="1000" Height="550"
        WindowStartupLocation="CenterOwner">

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Black"
					TintOpacity="1"
					MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<Panel Margin="40,40,0,0">
			<Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,Auto,Auto"  Margin="40,20,0,0">
				<CheckBox Grid.Row="0" IsChecked="{Binding RunAtStart}">Run at Start </CheckBox>
				<CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding SmoothTransition}">Smooth Transition </CheckBox>
				<Button  Grid.Row="1" Grid.Column="1" Margin="-30,0,0,0" Height="20" Width="20">
						<PathIcon Data="{StaticResource info_regular}" Height="10" Width="10"/> </Button>
			</Grid>
		</Panel>
		<Button Margin="40"  Content="Save Changes" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{Binding SaveChangesButton}" >
			<FlyoutBase.AttachedFlyout>
				<Flyout>
					<TextBlock Text="Saved !" />
				</Flyout>
			</FlyoutBase.AttachedFlyout>
		</Button>

	</Panel>
	
</Window>
